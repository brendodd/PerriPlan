<div class="container mt-3">
  <div class="row">
    <div class="d-flex m-0 p-0">
      <div class="main-pic" style="background-image: url('<%= @hotel.image_url[0] %>');"></div>
      <div class="photo-grid">
        <div class="sec-pic" style="background-image: url('<%= @hotel.image_url[1] %>');"></div>
        <div class="thi-pic" style="background-image: url('<%= @hotel.image_url[2] %>');"></div>
        <div class="fou-pic" style="background-image: url('<%= @hotel.image_url[3] %>');"></div>
        <div class="fif-pic" style="background-image: url('<%= @hotel.image_url[4] %>');"></div>
      </div>
    </div>
    <div class=" my-5 d-flex justify-content-between hotel-info ">
      <div class="my-5 d-flex flex-column justify-content-between" >
        <h3><strong><%= @hotel.name %></strong></h3>
        <h4>Address: <strong><%= @hotel.location %></strong></h4>
        <h4>Price Rating: <strong><%= @hotel.price_rating %></strong></h4>
      </div>
      <div class="container my-3">
        <h1>Reserve Your Booking</h1>
        <%= simple_form_for [@hotel, @booking] do |f| %>
          <%= f.input :start_time, as: :date %>
          <%= f.input :end_time, as: :date %>
          <%= f.input :note %>
          <%= f.submit "Submit Booking", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="sticky-map flex-shrink-0" style="position: sticky !important; top: 10px; width: 100%; height: 400px;"
           data-controller="map"
           data-map-markers-value="<%= @markers.to_json %>"
           data-map-markersrestaurants-value="<%= @markersrestaurants.to_json %>"
           data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
