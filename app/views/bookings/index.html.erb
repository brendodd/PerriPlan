<div class="container my-5">
  <h2>Past Bookings</h2>
  <div class="card mb-3 smol-card-component" style="max-width: 1140px;">
    <% if @past_bookings.present? %>
      <% @past_bookings.each do |booking| %>
        <div class="row g-0">
          <div class="col-md-4">
            <%= image_tag(booking.bookable.image_url[0], class: "card-img-top-index", height: '100%')%>
          </div>
          <div class="col-md-8">
            <div class=" d-flex justify-content-between align-items-center">
              <div class="card-body-left">
                <h5 class="card-title"><%= booking.bookable.name %></h5>
                <p class="card-text"><b>Booking From: </b><%= booking.start_time.strftime("%d %b %Y") %></p>
                <p class="card-text"><b>Booking To: </b><%= booking.end_time.strftime("%d %b %Y") %></p>
                <p class="card-text"><b>Status: </b><%= booking.status %></p>
              </div>
              <div class="card-body-right align-items-end">
                <p class="card-text"><%= link_to "Leave a review!", "", class:"btn btn-info fw-bold" %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p> No previous bookings  </p>
<% end %>
</div>
